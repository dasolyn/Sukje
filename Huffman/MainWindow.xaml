<Window x:Class="Huffman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Huffman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="TxtFile" Width="400" Height="30" Margin="10" />
            <Button Content="파일 찾기" Width="200" Height="30" Margin="10" Click="BtnFileDialog" />
            <Button Content="Huffman Compress" Width="200" Height="30" Margin="10" Click="BtnRun" />
            <Button Content="Huffman Decompress" Width="200" Height="30" Margin="10" Click="BtnDecompress" />
        </StackPanel>
    </Grid>
</Window>
